{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ensure development environment",
      "type": "process",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\scripts\\ensure-environment.ps1",
        "-RepoPath",
        "${workspaceFolder}"
      ],
      "runOptions": { "runOn": "folderOpen" },
      "presentation": { "reveal": "silent", "panel": "dedicated" },
      "problemMatcher": []
    }
  ]
}